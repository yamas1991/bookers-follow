<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
  	  <table class="table table-md user-index">
	  	  <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
  	    </thead>
  	  	<tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg"%></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	  	  
	  	  	  <td>
	  	  	    <% if current_user.following?(user) %>
                <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
              <% else %>
                <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
              <% end %>
	  	  	  </td>
	  	  	  
	  	  	</tr>
  	  	  <% end %>
  	  	  
  	  	  <td><%= link_to "ふぉろー", user_followings_path(current_user.id) %></td>
  	  	  <td><%= link_to "ふぉろわー", user_followers_path(current_user.id) %></td>
  	  	  
  	  	</tbody>
  	  </table>
  	</div>
  </div>